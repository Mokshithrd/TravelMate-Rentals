<% layout("/layout/boilerplate")-%> 
<body class="bg-light" style="margin-top: 30px;">
    

    <!-- Vehicles Section -->
    <div class="container py-4" style="margin-top: 30px;">
        <div id="vehicle-container" class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-4">
            <% for (let l of listing) { %>
            <div class="col vehicle-card" data-type="<%= l.type %>">
                <div class="card shadow-sm h-100 border-0">
                    <a href="/listing/<%= l._id %>" class="listing-link">
                        <img src="<%= l.image.url %>" class="card-img-top" alt="<%= l.image.url %>"
                            style="height: 200px; object-fit: cover; border-radius: 10px 10px 0 0;">
                    </a>
                    <div class="card-body bg-white rounded-bottom">
                        <div class="d-flex justify-content-between align-items-center">
                            <h5 class="card-title text-primary fw-bold">
                                <a href="/listing/<%= l._id %>" class="text-decoration-none">
                                    <%= l.brand %> - <%= l.model %>
                                </a>
                            </h5>
                            <span class="badge bg-success"><%= l.rating || "4.5" %></span>
                        </div>
                        <p class="card-text text-muted small">
                            <%= l.description %>
                        </p>
                        <p class="card-text text-success fw-bold">
                            â‚¹<%= l.pricePerDay.toLocaleString("en-IN") %>/Hr
                        </p>
                    </div>
                </div>
            </div>
            <% } %>
        </div>
    </div>
</body>

<script>
    function filterVehicles(type) {
        const cards = document.querySelectorAll(".vehicle-card");
        cards.forEach(card => {
            if (type === 'all' || card.dataset.type === type) {
                card.style.display = "block";
            } else {
                card.style.display = "none";
            }
        });
    }
</script>
