<% if (success && success.length) { %>
    <div class="alert alert-success alert-dismissible fade show col-6 offset-3" role="alert"  style="margin-top: 20px;">
      <%= success %>
      <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
  <% } 
  else if (error && error.length) { %>
    <div class="alert alert-danger alert-dismissible fade show col-6 offset-3" role="alert"  style="margin-top: 50px;">
      <%= error %>
      <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
  <% } %>
  