<% layout("/layout/boilerplate")-%>
<body>
    <div class="container-fluid">
        <div class="row mt-3">
            <div class="col-md-8 offset-md-2">
                <h5 class="text-center mb-4">Add New Rental Vehicle</h5>
                <form action="/listing" method="POST" novalidate class="needs-validation" enctype="multipart/form-data">
                    <!-- Vehicle Type -->
                    <div class="mb-3">
                        <label for="type" class="form-label">Type (Car/Bike):</label>
                        <select name="type" id="type" class="form-control" required>
                            <option value="Car">Car</option>
                            <option value="Bike">Bike</option>
                        </select>
                    </div>
                    <!-- Brand -->
                    <div class="mb-3">
                        <label for="brand" class="form-label">Brand:</label>
                        <input type="text" id="brand" name="brand" placeholder="e.g., Toyota, Yamaha" class="form-control" required>
                        <div class="invalid-feedback">Please provide the vehicle brand.</div>
                    </div>
                    <!-- Model -->
                    <div class="mb-3">
                        <label for="model" class="form-label">Model:</label>
                        <input type="text" id="model" name="model" placeholder="e.g., Corolla, R15" class="form-control" required>
                        <div class="invalid-feedback">Please provide the model.</div>
                    </div>
                    <!-- Year -->
                    <div class="mb-3">
                        <label for="year" class="form-label">Year:</label>
                        <input type="number" id="year" name="year" min="2000" max="2024" class="form-control" required>
                        <div class="invalid-feedback">Please provide a valid year.</div>
                    </div>
                    <!-- Description -->
                    <div class="mb-3">
                        <label for="description" class="form-label">Description:</label>
                        <textarea id="description" name="description" placeholder="Enter vehicle details" rows="3" class="form-control" required></textarea>
                    </div>
                   
                    <!-- Image URL -->
                    <div class="mb-3">
                        <label for="image" class="form-label">Upload Car/Bike Image :</label>
                        <input type="file" id="image" name="image" class="form-control" required>
                        <div class="invalid-feedback">Please provide a valid URL.</div>
                    </div>
                    <!-- Price Per Day -->
                    <div class="row">
                        <div class="mb-3 col-md-4">
                            <label for="pricePerDay" class="form-label">Price Per Day (â‚¹):</label>
                            <input  type="number"  id="pricePerDay" name="pricePerDay" placeholder="Enter price in INR" class="form-control" required>
                            <div class="invalid-feedback">Please provide a valid Price.</div>
                        </div>
                        <!-- Location -->
                        <div class="mb-3 col-md-8">
                            <label for="location" class="form-label">Location:</label>
                            <input type="text" id="location" name="location" placeholder="e.g., Bangalore, Mumbai" class="form-control" required>
                            <div class="invalid-feedback">Please provide a valid Location.</div>
                        </div>
                    </div>
                    <!-- Country -->
                    <div class="mb-3">
                        <label for="country" class="form-label">Country:</label>
                        <input type="text" id="country" name="country" placeholder="e.g., India, USA" class="form-control" required>
                        <div class="invalid-feedback">Please provide a country name.</div>
                    </div>
                    <!-- Features -->
                    <div class="mb-3">
                        <label for="features" class="form-label">Features (comma-separated):</label>
                        <input type="text" id="features" name="features" placeholder="e.g., GPS, Bluetooth, ABS" class="form-control">
                    </div>
                    <!-- Availability -->
                    <div class="mb-3">
                        <label for="availability" class="form-label">Availability:</label>
                        <select name="availability" id="availability" class="form-control" required>
                            <option value="true">Available</option>
                            <option value="false">Unavailable</option>
                        </select>
                    </div>
                    <!-- Rating -->
                    <div class="mb-3">
                        <label for="rating" class="form-label">Rating (0-5):</label>
                        <input type="number" id="rating" name="rating" step="0.1" min="0" max="5" placeholder="e.g., 4.5" class="form-control">
                    </div>
                    <!-- Submit Button -->
                    <button type="submit" class="btn btn-dark edit-btn mt-3">Add Vehicle</button>
                </form>
            </div>
        </div>
    </div>
    <script src="/index.js"></script>
</body>
